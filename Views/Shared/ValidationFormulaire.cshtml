@model TPLOCAL1.Models.FormModel;

<!DOCTYPE html>
<html>
<head>
    <title>Validation Formulaire</title>
    <link rel="stylesheet" href="~/resources/Form.css" />
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de Validation</h1>
    </header>

    <div class="flex-container">
        <div class="flex-item">
            <nav>
                <ul>
                    <li><a href="/Home">Accueil</a></li>
                    <li><a href="#">Liste Avis</a></li>
                </ul>
            </nav>
        </div>
        <div class="flex-item">
            <table class="FormTable">
                <caption>Informations personelles</caption>
                <tr>
                    <td>Nom</td>
                    <td> @Model.Nom </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>"Prenom"</td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td>"Sexe"</td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>"Adresse"</td>
                </tr>
                <tr>
                    <td>Code Postal</td>
                    <td>"CodePostal"</td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>"Ville"</td>
                </tr>
                <tr>
                    <td>Adresse Mail</td>
                    <td>"AdresseMail"</td>
                </tr>
            </table>

            <table class="FormTable">
                <caption>Informations formation suivie</caption>
                <tr>
                    <td>Date début formation</td>
                    <td>
                        <input type="date"
                               id="start"
                               name="debutformation"
                               max="2021-01-01"
                               required />
                    </td>
                </tr>
                <tr>
                    <td>Formation suivie</td>
                    <td>"Cour"</td>
                </tr>
            </table>

            <table class="FormTable">
                <caption>Revues Formation</caption>
                <tr>
                    <td>Cobol Formation</td>
                    <td>"CobolFormation"</td>
                </tr>
                <tr>
                    <td>C# Formation</td>
                    <td>"CSFormation"</td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>