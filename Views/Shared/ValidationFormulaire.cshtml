@model TPLOCAL1.Models.FormModel;

<!DOCTYPE html>
<html>
<head>
    <title>Validation Formulaire</title>
    <link rel="stylesheet" href="~/resources/Formulaire.css" />
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de Validation</h1>
    </header>

    <div class="flex-container">
        <div class="flex-item">
            <nav>
                <ul>
                    <li><a href="/Home">Accueil</a></li>
                    <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
                </ul>
            </nav>
        </div>
        <div class="flex-item">
            <p>Votre formulaire a bien été pris en compte</p>
            <table class="FormTable">
                <caption>Informations personelles</caption>
                <tr>
                    <td>Nom</td>
                    <td> @Model.Nom </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td> @Model.Prenom </td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td> @Model.Sexe</td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td> @Model.Adresse </td>
                </tr>
                <tr>
                    <td>Code Postal</td>
                    <td> @Model.CodePostal </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td> @Model.Ville </td>
                </tr>
                <tr>
                    <td>Adresse Mail</td>
                    <td> @Model.AdresseMail</td>
                </tr>
            </table>

            <table class="FormTable">
                <caption>Informations formation suivie</caption>
                <tr>
                    <td>Date début formation</td>
                    <td>
                        @Model.DebutFormation.Day/@Model.DebutFormation.Month/@Model.DebutFormation.Year
                    </td>
                </tr>
                <tr>
                    <td>Formation suivie</td>
                    <td> @Model.Cour </td>
                </tr>
            </table>

            <table class="FormTable">
                <caption>Revues Formation</caption>
                <tr>
                    <td>Cobol Formation</td>
                    <td> @Model.CobolFormation </td>
                </tr>
                <tr>
                    <td>C# Formation</td>
                    <td> @Model.CSFormation </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>