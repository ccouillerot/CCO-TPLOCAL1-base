@model TPLOCAL1.Models.OpinionList;

<!DOCTYPE html>
<html>
<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/resources/Form.css" />
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Liste des avis</h1>
    </header>

    <div class="flex-container">
        <div class="flex-item">
            <nav>
                <ul>
                    <li><a href="/Home">Accueil</a></li>
                    <li><a href="/Home/Index/Form">Remplir le formulaire</a></li>
                </ul>
            </nav>
        </div>
        <div class="flex-item">
            <table class="FormTable">
                <caption>Informations personelles</caption>
                <tr>
                    <td>Nom</td>
                    <td>Prénom</td>
                    <td>Avis donné</td>
                </tr>
                @{var test = Model.GetAvis("~/DataAvis.xml");}
                @foreach (var review in test)
                {
                <tr>
                    <td>@review.LastName</td>
                    <td>@review.FirstName</td>
                    <td>@review.OpinionGiven</td>
                </tr>
                }

            </table>
        </div>
    </div>
</body>
</html>
